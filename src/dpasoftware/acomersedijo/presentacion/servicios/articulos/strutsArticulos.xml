<struts>
    
    <package name="articulos" extends="default" namespace="/servicios/articulos">
        
        <action name="verArticulo" class="actionArticulos" method="verArticulo">
            <result name="ok">/servicios/articulos/verArticulo.jsp</result>
        </action>
        
        <action name="comentarArticulo" class="actionArticulos" method="comentarArticulo">
            <result name="input">/servicios/articulos/verArticulo.jsp</result>
        </action>
        
        <action name="verArticulos" class="actionArticulos" method="verArticulos">
            <result name="ok">/servicios/articulos/verArticulos.jsp</result>
        </action>
        
    </package>
    
